{% extends 'base.html.twig' %}

{% block title %}Auction{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <h1>Auction</h1>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ auction.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ auction.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        {% if auction.description == NULL %}
                            <td>-</td>
                        {% else %}
                            <td>{{ auction.description }}</td>
                        {% endif %}
                    </tr>
                    <tr>
                        <th>Image</th>
                        {% if auction.image == NULL %}
                            <td>-</td>
                        {% else %}
                            <td>{{ auction.image }}</td>
                        {% endif %}
                    </tr>
                    <tr>
                        <th>InitialPrice</th>
                        <td>{{ auction.initialPrice }}€</td>
                    </tr>
                    <tr>
                        <th>FinalBid</th>
                        <td>{{ auction.finalBid }}€</td>
                    </tr>
                    </tbody>
                </table>

                <div class="mb-4">
                    <a class="mr-5" href="{{ path('auction_index') }}">back to list</a>

                    <a href="{{ path('auction_edit', {'id': auction.id}) }}">edit</a>
                </div>

                {{ include('auction/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
